{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}
{% block title %}Add User{% endblock %}

{% block body %}


<section class="login-block">
    <!-- Container-fluid starts -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
                    <div class="form-group">
                        <div class="text-center">
                        </div>
                        <div class="auth-box card">
                            <div class="card-block">
                                <div class="row m-b-20">
                                    <div class="col-md-12">
                                        <h3 class="text-center txt-primary">Add another User</h3>
                                    </div>
                                </div>

                                <div class="form-group form-primary">
                                    {{ form_widget(form.FirstName, { 'attr': {'class': 'form-control', 'placeholder': 'FirstName'|trans } }) }}
                                    {{ form_errors(form.FirstName) }}
                                    <span class="form-bar"></span>
                                </div>
                                <div class="form-group form-primary">
                                    {{ form_widget(form.LastName, { 'attr': {'class': 'form-control', 'placeholder': 'LastName'|trans } }) }}
                                    {{ form_errors(form.LastName) }}
                                    <span class="form-bar"></span>
                                </div>
                                <div class="form-group form-primary">
                                    {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'form.username'|trans } }) }}
                                    {{ form_errors(form.username) }}
                                    <span class="form-bar"></span>
                                </div>
                                <div class="form-group form-primary">
                                    <select name="select"
                                            class="form-control form-control-primary">
                                        <option value="opt1">Select One Role</option>
                                        <option value="opt3">Test Manager</option>
                                        <option value="opt4">Manager</option>
                                    </select>
                                </div>

                                <div class="form-group form-primary">
                                    {{ form_label(form.roles, "Choose Role", {'label_attr': {'class': 'control-label txt-primary'}})}}
                                    <ul>
                                        {% for child in form.roles %}
                                        <li>
                                            <div class="checkbox-fade fade-in-primary">
                                                    <span>{{ form_widget(child) }}</span>
                                                    <span>{{ form_label(child) }}</span>
                                            {% endfor %}
                                            </div>

                                        </li>
                                    </ul>
                                    <span class="form-bar"></span>
                                </div>
                                <div class="form-group form-primary">
                                    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'form.email'|trans } }) }}
                                    {{ form_errors(form.email) }}
                                    <span class="form-bar"></span>
                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <div class="form-group form-primary">
                                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'form.password'|trans } }) }}
                                            {{ form_errors(form.plainPassword.first) }}
                                            <span class="form-bar"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group form-primary">
                                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'form.password_confirmation'|trans } }) }}

                                            {{ form_errors(form.plainPassword.second) }}


                                            <span class="form-bar"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="row m-t-30">
                                    <div class="col-md-12">
                                        <button type="submit" class="btn btn-primary btn-md btn-block waves-effect text-center m-b-20" value="{{ 'registration.submit'|trans }}">Register User</button>
                                    </div>
                                </div>
                                <hr/>
                                <div class="row">
                                    <div class="col-md-10">
                                        <p class="text-inverse text-left m-b-0">Thank you.</p>
                                    </div>
                                    <div class="col-md-2">
                                        <img src="{{ asset('assets/images/auth/Logo-small-bottom.png') }}"
                                             alt="small-logo.png">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
            </div>
            <!-- end of col-sm-12 -->
        </div>
        <!-- end of row -->
    </div>
    <!-- end of container-fluid -->
</section>
{% endblock%}

{% block javascripts %}

{% endblock %}



